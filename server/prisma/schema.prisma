// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_URL")
}

enum Role {
  USER
  ADMIN
}

model User {
  id                    String    @id
  createdAt             DateTime
  updatedAt             DateTime?
  deletedAt             DateTime?
  name                  String
  email                 String    @unique
  password              String
  role                  Role      @default(USER)
  authorizationToken    String?
  passwordResetToken    String?
  emailConfirmationCode String?
  confirmedEmail        Boolean   @default(false)
}

model Product {
  id        String    @id
  createdAt DateTime
  updatedAt DateTime?
  deletedAt DateTime?
  name      String
}
