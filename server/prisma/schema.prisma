// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_URL")
}

enum Role {
  USER
  ADMIN
}

model User {
  id                    String    @id
  createdAt             DateTime
  updatedAt             DateTime?
  deletedAt             DateTime?
  name                  String
  email                 String    @unique
  password              String
  role                  Role      @default(USER)
  authorizationToken    String?
  emailConfirmationCode String?
}

model Food {
  id        String    @id
  createdAt DateTime
  updatedAt DateTime?
  deletedAt DateTime?
  name      String
  expiresIn Int

  suppliedFoods SuppliedFood[]
}

model FoodSupply {
  id            String         @id
  createdAt     DateTime
  updatedAt     DateTime?
  deletedAt     DateTime?
  suppliedFoods SuppliedFood[]
}

model SuppliedFood {
  foodSupplyId String
  foodSupply   FoodSupply @relation(fields: [foodSupplyId], references: [id])
  foodId       String
  food         Food       @relation(fields: [foodId], references: [id])
  createdAt    DateTime
  updatedAt    DateTime?
  deletedAt    DateTime?

  @@id([foodSupplyId, foodId])
}
