// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Food {
  id            String          @id
  name          String          @unique
  createdAt     DateTime
  updatedAt     DateTime?
  deletedAt     DateTime?
  restockedFood RestockedFood[]
}

model FoodRestocking {
  id            String          @id
  createdAt     DateTime
  updatedAt     DateTime?
  deletedAt     DateTime?
  restockedFood RestockedFood[]
}

model RestockedFood {
  foodRestockingId String
  foodRestocking   FoodRestocking @relation(fields: [foodRestockingId], references: [id])
  foodId           String
  food             Food           @relation(fields: [foodId], references: [id])
  createdAt        DateTime
  updatedAt        DateTime?
  deletedAt        DateTime?

  @@id([foodRestockingId, foodId])
}
